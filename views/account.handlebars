<!doctype html>
<html>

<head>
    <title>{{title}}</title>
    <link rel="stylesheet" type="text/css" href="/public/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <style>
    body {
        width: 100%;
        height:100%;
        background: #EFEFEF;
    }
    .container {
        background: white;
        margin-top: 2%;
    }
    img.media-object{
        max-width: 100px;
    }
    </style>
    <link rel="icon" type="image/png" href="/public/favicon.png">
</head>

<body>
    <div class="container">
        {{#user._json}}
        <h1>{{title}}</h1>
        <a href="/admin">&larr; Dashboard</a>
        <div class="media">
            <a class="pull-left" href="#">
                <img class="media-object" src="{{picture}}" alt="profile picture">
            </a>
            <div class="media-body">
                <h4 class="media-heading">{{name}}</h4>
                {{email}}
                <br>Google ID: {{id}}
                <br>Verified email: <script>if({{verified_email}}){document.writeln('&#10003;')}else{document.writeln('&#10007;')}</script>
            </div>
            <a href="/logout" class="pull-right">Log out</a>
            <br><br>
        </div>
        {{/user._json}}
    </div>
    <script type="text/javascript"></script>

</body>

</html>
